<?xml version="1.0" encoding="UTF-8"?>

<web-fragment metadata-complete="true" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>dk.dma.msinm.user.security.SecurityServletFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <servlet>
        <servlet-name>KeycloakLogin</servlet-name>
        <servlet-class>dk.dma.msinm.user.security.oidc.KeycloakLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KeycloakCallback</servlet-name>
        <servlet-class>dk.dma.msinm.user.security.oidc.KeycloakCallbackServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>KeycloakLogin</servlet-name>
        <url-pattern>/oidc-login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KeycloakCallback</servlet-name>
        <url-pattern>/oidc-callback</url-pattern>
    </servlet-mapping>


</web-fragment>
